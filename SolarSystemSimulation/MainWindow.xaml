<Window x:Class="SolarSystemSimulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolarSystemSimulation"
        xmlns:hx="http://helix-toolkit.org/wpf/SharpDX"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600" MinHeight="720" MinWidth="1280"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <hx:Viewport3DX x:Name="Viewport3DX"
                        ShowCameraInfo="True"
                        ShowFrameRate="True"
                        ShowFrameDetails="True"
                        ShowViewCube="True"
                        ShowCoordinateSystem="True"
                        ModelUpDirection="0, 1, 0"
                        MSAA="Maximum"
                        EnableSwapChainRendering="True"
                        EffectsManager="{Binding EffectsManager}"
                        BackgroundColor="Black"
                        Camera="{Binding Camera}">
            <!-- <hx:DirectionalLight3D Direction="0, -1, 0" Color="White"/> -->
            <hx:AmbientLight3D Color="{Binding LightColor}" />
        </hx:Viewport3DX>
    </Grid>
</Window>